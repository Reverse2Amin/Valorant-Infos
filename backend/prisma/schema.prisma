// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  email     String?   @unique // Fragezeichen = Optional (damit Register ohne Email geht)
  password  String
  name      String?
  isAdmin   Boolean   @default(false)
  favorites Favorite[]
}

model Favorite {
  id       Int    @id @default(autoincrement())
  userId   Int
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  itemUuid String
  name     String
  image    String

  @@unique([userId, itemUuid])
}